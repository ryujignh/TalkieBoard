<div class="container">
  <h1 class="text-center mt-4">Items</h1>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
          <%= link_to("") do %>
            <div class="card-block">
              <h5 class="card-title text-center mt-4"><%= item.name %></h5>
              <%= image_tag(item.image, class: "card-img-top mb-4") %>
            </div>
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>