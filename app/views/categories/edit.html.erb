<div class="container">
  <h1 class="text-center mt-4"></h1>
  <div class="row">
    <%= form_for(@category) do |f| %>
      <%= f.label :name  %>
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter name" %>
      <%= f.label :name_ja  %>
      <%= f.text_field :name_ja, class: 'form-control', placeholder: "Enter name_ja" %>
      <%= f.label :image  %>
      <%= f.text_field :image, class: 'form-control', placeholder: "Enter image" %>
      <%= f.submit(class: 'btn btn-primary') %>
    <% end -%>
  </div>
</div>