<div class="container">

  <h1 class="text-center mt-4"><%= @category.localized_name %></h1>
  <%= link_to('Add new category', new_category_item_path) %>
  <div class="row">
    <% @items.each do |item| %>
      <%= link_to(t('common.edit'), edit_category_item_path(@category, item)) %>
      <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
          <div class="card-block">
            <h5 class="card-title text-center mt-4"><%= item.localized_name %></h5>
            <%= image_tag(item.display_image, class: "card-img-top mb-4") %>
          </div>
        </div>
      </div>
    <% end -%>
  </div>
</div>