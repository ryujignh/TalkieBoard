<div class="container">
  <h1 class="text-center mt-4"><%= t('categories') %></h1>
  <%= link_to('Add new category', new_category_path) %>
  <div class="row">
    <% @categories.each do |category| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
        <div class="card">
          <%= link_to(category_items_path(category)) do %>
            <div class="card-block">
              <h5 class="card-title text-center mt-4"><%= category.localized_name %></h5>
              <%= image_tag(category.image, class: "card-img-top mb-4") %>
            </div>
          <% end -%>
        </div>
      </div>
    <% end -%>
  </div>
</div>