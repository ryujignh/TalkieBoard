<% category = local_assigns[:category] %>
<div class="content_container text-center small-6 medium-3 large-3 columns end">
  <div class="content">
    <p class="title"><%= category.localized_name %></p>
    <% if sub_categories_path = local_assigns[:sub_categories_path] %>
      <!-- render with link to category items -->
      <%= link_to(sub_categories_path) do %>
        <%= image_tag(category.display_image) %>
      <% end -%>
    <% else %>
    <!-- render items -->
      <%= image_tag(category.display_image) %>
    <% end %>
    <% if category = category.try(:localized_description) %>
      <div class="description">
        <%= category%>
      </div>
    <% end %>
  </div>
</div>
